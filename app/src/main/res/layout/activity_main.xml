<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/img_btn_1"
        android:layout_width="150dp"
        android:layout_height="217dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/img_btn1" />

    <ImageButton
        android:id="@+id/img_btn_2"
        android:layout_width="150dp"
        android:layout_height="217dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/img_btn_1"
        app:srcCompat="@drawable/img_btn2" />

    <ImageButton
        android:id="@+id/img_btn_3"
        android:layout_width="150dp"
        android:layout_height="260dp"
        android:layout_below="@id/img_btn_1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/img_btn3" />

    <ImageButton
        android:id="@+id/img_btn_4"
        android:layout_width="150dp"
        android:layout_height="275dp"
        android:layout_below="@id/img_btn_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/img_btn_3"
        app:srcCompat="@drawable/img_btn4" />
</RelativeLayout>